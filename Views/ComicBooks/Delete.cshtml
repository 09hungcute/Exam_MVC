@model ComicRentalSystem.Models.ComicBook

<h2>Xác nhận xóa</h2>

<h4>Are you sure you want to delete the comic book: @Model.BookName?</h4>

<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Yes, delete it</button>
    <a href="@Url.Action("Index", "ComicBooks")" class="btn btn-secondary">Cancel</a>
</form>
