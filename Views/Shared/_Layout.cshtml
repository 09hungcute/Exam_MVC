<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ComicRentalSystem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">ComicRentalSystem</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/ComicBooks">Available Comic Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Customers/Create">Customer Registration</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Rentals/Create">Rent a Comic Book</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Rentals/Index">Rental Report</a>
                    </li>
                </ul>
            </div>
        </nav>
        
        <!-- Content here -->
        <main>
            @RenderBody()
        </main>
    </div>
</body>
</html>
